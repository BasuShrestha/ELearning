@model Elearning.Models.Progress

@{
    ViewData["Title"] = "SearchCourses";
    Student student = ViewBag.Student;
}

<div class="row">
    <div class="container mt-4">
        <h2>Select a course that @{@student.Student_Name} has enrolled on</h2>
        <form asp-action="AddProgress" asp-asp-controller="Progress" method="get">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-6">
                <label asp-for="CourseId" class="control-label">Course</label>
                <select asp-for="CourseId" asp-items="@ViewBag.CoursesEnrolled" class="form-control">
                    <option value="">Select a course</option>
                </select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
                <input type="hidden" name="studentId" value="@student.Student_Id" />
                <a class="btn btn-danger" asp-controller="Progress" asp-action="ProgressView">Cancel</a>
            </div>

            <br />
        </form>
    </div>
</div>

