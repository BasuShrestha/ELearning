@model Elearning.Models.Progress

@{
    ViewData["Title"] = "AddLessonProgress";
    Student student = ViewBag.Student;
    Course course = ViewBag.Course;
}

<div class="row">
    <div class="container mt-4">
        <h2>Select a lesson to add progress for course @{@course.Title} for @{@student.Student_Name}</h2>
        <form asp-action="AddProgressDetail" asp-asp-controller="Progress" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-6">
                <label asp-for="LessonId" class="control-label">Lesson</label>
                <select asp-for="LessonId" asp-items="@ViewBag.CourseLessons" class="form-control">
                    <option value="">Select a lesson</option>
                </select>
            </div>
            <br />
            <div class="form-group col-md-6">
                <label asp-for="LastAccessedDate" class="control-label">Last Accessed Date</label>
                <input asp-for="LastAccessedDate" type="date" nameclass="form-control" />
                <span asp-validation-for="LastAccessedDate" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group col-md-6">
                <label asp-for="LessonStatus" class="control-label">Lesson Status</label>
                <select asp-for="LessonStatus" asp-items="@ViewBag.StatusTypes" class="form-control">
                    <option value="">Select a lesson</option>
                </select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Insert" class="btn btn-primary" />
                <input type="hidden" name="StudentId" value="@student.Student_Id" />

                <a class="btn btn-danger" asp-controller="Progress" asp-action="ProgressView">Cancel</a>
            </div>

            <br />
        </form>
    </div>
</div>
