@model Elearning.Models.Instructor

@{
    ViewData["Title"] = "DeleteInstructor";
    Instructor instructor = new Instructor();
    instructor = ViewBag.sqldata;
}

<h3>Are you sure you want to delete @{@instructor.Name} from instructor list?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Instructor Id
        </dt>
        <dd class = "col-sm-10">
            @instructor.InstructorId
        </dd>
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @instructor.Name
        </dd>
        <dt class = "col-sm-2">
            Course
        </dt>
        <dd class = "col-sm-10">
            @instructor.Course_Name
        </dd>
    </dl>
    
    <form asp-action="DeleteInstructorDetail" asp-controller="Instructor" method="post">
        <input type="hidden" name="instructorId" value="@instructor.InstructorId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-primary" asp-action="InstructorView" asp-controller="Instructor">Cancel</a>
    </form>
</div>
