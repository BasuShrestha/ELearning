@model Elearning.Models.Instructor

@{
    ViewData["Title"] = "AddInstructorDetail";
}

<div class="row">
    <div class="container mt-4">
        <h2>Fill the Instructor Details Below</h2>
        <form asp-controller="Instructor" asp-action="AddInstructorDetail" method="post">

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label">Name:</label>
                <input asp-for="Name" class="form-control" required>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Course_Id" class="form-label">Course:</label>
                <select asp-for="Course_Id" asp-items="@ViewBag.CourseList" class="form-control">
                    <option value="">Please select a course</option>
                </select>

            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Insert" class="btn btn-primary" />
                <a class="btn btn-danger" asp-controller="Instructor" asp-action="InstructorView">Cancel</a>
            </div>
            <br />
        </form>
    </div>
</div>
