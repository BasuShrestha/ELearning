@model Elearning.Models.InstructorAssignment

@{
    ViewData["Title"] = "DeleteInstructorAssignment";
    InstructorAssignment assignment = new InstructorAssignment();
    assignment = ViewBag.SQLData;
}

<h3>Are you sure you want to delete the assignment of @{@assignment.Instructor_Name} to @{@assignment.Course_Title}?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Course
        </dt>
        <dd class="col-sm-10">
            @assignment.Course_Title
        </dd>
        <dt class="col-sm-2">
            Instructor
        </dt>
        <dd class="col-sm-10">
            @assignment.Instructor_Name
        </dd>
        <dt class="col-sm-2">
            Assigned Date
        </dt>
        <dd class="col-sm-10">
            @assignment.AssignedDate
        </dd>
    </dl>

    <form asp-action="DeleteInstructorAssignment" asp-controller="InstructorAssignment" method="post">
        <input type="hidden" name="courseId" value="@assignment.Course_Id" />
        <input type="hidden" name="instructorId" value="@assignment.Instructor_Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-primary" asp-action="InstuctorAssignmentView" asp-controller="InstructorAssignment">Cancel</a>
    </form>
</div>
