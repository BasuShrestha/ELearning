@model Elearning.Models.Course

@{
    ViewData["Title"] = "DeleteCourse";
    Course course = new Course();
    course = ViewBag.sqldata;
}

<h3>Are you sure you want to delete the course: @course.Title?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Course Id:
        </dt>
        <dd class = "col-sm-10">
            @course.Course_Id
        </dd>
        <dt class = "col-sm-2">
            Title:
        </dt>
        <dd class = "col-sm-10">
            @course.Title
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @course.Description
        </dd>
    </dl>
    
    <form asp-action="DeleteCourseById" asp-controller="Course" method="post">
        <input type="hidden" name="courseId" value="@course.Course_Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-primary" asp-action="CourseView" asp-controller="Course">Cancel</a>
    </form>
</div>
