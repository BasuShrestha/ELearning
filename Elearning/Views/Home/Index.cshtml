@model IEnumerable<Elearning.Models.Course>

@{
    Course course = ViewBag.sqlData;
}
@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <h2 class="mb-4">Available Courses</h2>
    <div class="row">
        @foreach (Course c in course.Courses.Where(c => c.Is_Deleted == 0))
        {
            <div class="col-md-4 d-flex align-items-sm-stretch">
                <div class="card" style="width: 18rem;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@c.Title</h5>
                        <p class="card-text">@c.Description</p>
                        <a href="#" class="btn btn-primary mt-auto">Go to course</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


