@model Elearning.Models.Enrolment

@{
    ViewData["Title"] = "DeleteEnrolment";
    Enrolment enrolment = new Enrolment();
    enrolment = ViewBag.SQLData;
}

<h3>Are you sure you want to delete the enrolment of @{
        @enrolment.Student_Name
    } to @{
        @enrolment.Course_Title
    }?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Course
        </dt>
        <dd class="col-sm-10">
            @enrolment.Course_Title
        </dd>
        <dt class="col-sm-2">
            Instructor
        </dt>
        <dd class="col-sm-10">
            @enrolment.Student_Name
        </dd>
        <dt class="col-sm-2">
            Enrolled Date
        </dt>
        <dd class="col-sm-10">
            @enrolment.EnrolledOnDate
        </dd>
    </dl>

    <form asp-action="DeleteStudentEnrolment" asp-controller="Enrolment" method="post">
        <input type="hidden" name="studentId" value="@enrolment.Student_Id" />
        <input type="hidden" name="courseId" value="@enrolment.Course_Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-primary" asp-action="EnrolmentView" asp-controller="Enrolment">Cancel</a>
    </form>
</div>
