@model Elearning.Models.Student

@{
    ViewData["Title"] = "AddStudentDetail";
}

<div class="row">
    <div class="container mt-4">
        <h2>Fill the Student Details Below</h2>
        <form asp-action="AddStudentDetail" asp-asp-controller="Student" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group col-md-6">
                <label asp-for="Student_Name" class="control-label">Name</label>
                <input asp-for="Student_Name" class="form-control" />
                <span asp-validation-for="Student_Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group col-md-6">
                <label asp-for="Contact" class="control-label">Contact</label>
                <input asp-for="Contact" class="form-control" />
                <span asp-validation-for="Contact" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group col-md-6">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group col-md-6">
                <label asp-for="DOB" class="control-label">Date of Birth</label>
                <input asp-for="DOB" type="date" nameclass="form-control" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group col-md-6">
                <label asp-for="Country" class="control-label">Country</label>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Insert" class="btn btn-primary" />
                <a class="btn btn-danger" asp-controller="Student" asp-action="StudentView">Cancel</a>
            </div>
        </form>
    </div>

</div>
